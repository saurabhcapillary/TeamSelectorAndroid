<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal" >


    <TextView
            android:id="@+id/dateTextView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="TextView"/>

    <TextView
            android:id="@+id/venueTextView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="TextView"
            android:layout_below="@+id/dateTextView"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:paddingLeft="80dp">
    <ImageView android:src="@drawable/mi"
               android:layout_width="60dp"
               android:layout_height="30dp"
               android:paddingLeft="35dp"
               android:id="@+id/squad1Img"
               android:paddingTop="8dp"
               android:layout_alignParentTop="true"
            />

    <TextView
            android:id="@+id/squad1TextView"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textSize="20dp"
            android:text="TextView"/>

    <TextView
            android:id="@+id/vs"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textSize="15dp"
            android:text="vs"/>

    <ImageView android:src="@drawable/rcb"
               android:layout_width="50dp"
               android:layout_height="30dp"
               android:paddingLeft="10dp"
               android:paddingTop="8dp"
               android:id="@+id/squad2Img"/>


    <TextView
            android:id="@+id/sqaud2TextView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:text="TextView"/>
    </LinearLayout>

</RelativeLayout>