<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/Steel_Blue">

    <TextView android:id="@+id/aboutRules"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:text="Rules "
              android:gravity="center"
              android:textStyle="bold"
              android:textSize="24dp"
              android:textColor="@color/white"/>

    <TextView android:id="@+id/rulesRuns"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:text="Runs \n 1. per: 1 \n 2. runs >=30: 10 \n 3. runs >=50: 30 \n 4. runs >=75: 50 \n 5. runs >=100: 80"
              android:gravity="left"
              android:textSize="20dp"
              android:textColor="@color/white"/>


    <TextView android:id="@+id/rulesWickets"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:text="Wickets \n 1. per: 10 \n 2. wickets =2: 20 \n 3. wickets =3: 50 \n 4. wickets =4: 80 \n 5. wickets > 4: 100 "
              android:gravity="left"
              android:textSize="20dp"
              android:textColor="@color/white"/>

    <!--<TextView android:id="@+id/rulesCatchStumps"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:text="Catches and Stumps \n 1. per: 10"
              android:gravity="left"
              android:textSize="20dp"
              android:textColor="@color/white"/> -->

    <TextView android:id="@+id/rulesEconRate"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:text="Econ Rate (Min. overs 3) \n 1. less than 6.0: 20 \n 2. less than 5.0 : 30 \n 3. less than 4.0 : 40 "
              android:gravity="left"
              android:textSize="20dp"
              android:textColor="@color/white"/>

    <TextView android:id="@+id/rulesStrikeRate"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:text="Strike Rate (Min. runs 20) \n 1. >=100 : 10 \n 2. >=125 : 20 \n 3. >=150 : 30  "
              android:gravity="left"
              android:textSize="20dp"
              android:textColor="@color/white"/>

    <TextView android:id="@+id/aboutSlctCaptain"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:text="*Selected captain will get double points "
              android:gravity="left"
              android:textSize="20dp"
              android:textColor="@color/white"/>

</LinearLayout>
    </ScrollView>
